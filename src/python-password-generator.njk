<script src="https://cdn.jsdelivr.net/pyodide/v0.25.0/full/pyodide.js"></script>
<script>
(function() {
    let pyodidePromise = null;
    async function getPyodide() {
        if (!pyodidePromise) pyodidePromise = loadPyodide();
        return pyodidePromise;
    }

    const btn = document.getElementById('generate-btn');
    const output = document.getElementById('output');
    const status = document.getElementById('status');

    btn.addEventListener('click', async () => {
        status.textContent = 'Generating safely with Python secrets...';
        btn.disabled = true;
        
        try {
            const py = await getPyodide();
            
            // Get values
            const length = document.getElementById('length').value;
            const useDigits = document.getElementById('use-digits').checked ? 'True' : 'False';
            const useSpecial = document.getElementById('use-special').checked ? 'True' : 'False';
            
            const runCode = `
import secrets
import string

def generate(length, use_digits, use_special):
    chars = string.ascii_letters
    if use_digits:
        chars += string.digits
    if use_special:
        chars += "!@#$%^&*()_+-=[]{}|;:,.<>?"
        
    return "".join(secrets.choice(chars) for _ in range(int(length)))

print(generate(${length}, ${useDigits}, ${useSpecial}))
            `;

            let stdout = "";
            py.setStdout({ batched: (str) => stdout += str });
            await py.runPythonAsync(runCode);
            
            output.textContent = stdout.trim();
            status.textContent = 'Generated using Python secrets module';
            
        } catch (err) {
            output.textContent = "Error";
            status.textContent = err.message;
        } finally {
            btn.disabled = false;
        }
    });
})();
</script>
