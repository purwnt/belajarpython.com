<div class="max-w-2xl mx-auto">
    <!-- Configuration -->
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg p-6 mb-8 border border-slate-200 dark:border-slate-700">
        <h3 class="font-bold text-lg mb-4 dark:text-white">Konfigurasi</h3>
        
