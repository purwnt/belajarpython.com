<!-- Level Dasar -->
<div class="flex items-center gap-2 px-4 py-3 bg-slate-50 mb-2 border border-slate-100">
  <img src="/img/icons/bronze.png" alt="Level Dasar" class="w-5 h-5">
    <span class="font-bold text-slate-700 text-xs uppercase tracking-wider">Level Dasar</span>
  </div>
  <ul class="leading-normal mb-6">
    {% set items = [
    ['apa-itu-python', '1. Pendahuluan'],
    ['instalasi-python', '2. Instalasi'],
    ['menjalankan-python', '3. Menjalankan'],
    ['hello-world-python', '4. Hello World'],
    ['komentar-python', '5. Komentar'],
    ['tipe-data-python', '6. Tipe Data'],
    ['variabel-python', '7. Variabel'],
    ['operator-python', '8. Operator'],
    ['kondisi-if-else-python', '9. Kondisi'],
    ['loop-python', '10. Loop'],
    ['number-python', '11. Number'],
    ['string-python', '12. String'],
    ['list-python', '13. List'],
    ['tuple-python', '14. Tuple'],
    ['dictionary-python', '15. Dictionary'],
    ['tanggal-waktu-python', '16. Tanggal & Waktu'],
    ['fungsi-python', '17. Fungsi']
  ] %}
    {% for slug, label in items %}
      <li class="border-l-2 {{ 'border-primary-500 bg-primary-50/30' if currentTutorial == slug else 'border-slate-100' }}
          py-[6px]">
        <a href="/tutorial/{{ slug }}" class="{{ 'font-bold text-primary-500' if currentTutorial == slug else 'font-medium text-slate-400' }} hover:text-primary-500 leading-relaxed px-4 block transition-colors text-sm">
          {{ label }}
        </a>
      </li>
    {% endfor %}
  </ul>
  <!-- Level Menengah -->
  <div class="flex items-center gap-2 px-4 py-3 bg-slate-50 rounded mb-2 border border-slate-100">
    <img src="/img/icons/silver.png" alt="Level Menengah" class="w-5 h-5">
      <span class="font-bold text-slate-700 text-xs uppercase tracking-wider">Level Menengah</span>
    </div>
    <ul class="leading-normal mb-6">
      {% set items = [
    ['modul-python', '18. Modul'],
    ['file-io-python', '19. File I/O'],
    ['exception-python', '20. Exception'],
    ['object-class-python', '21. Object & Class'],
    ['akses-database-python', '22. Akses Database'],
    ['networking-python', '23. Networking'],
    ['pengembangan-web-python', '24. Pengembangan Web']
  ] %}
      {% for slug, label in items %}
        <li class="border-l-2 {{ 'border-primary-500 bg-primary-50/30' if currentTutorial == slug else 'border-slate-200' }}
            py-[6px]">
          <a href="/tutorial/{{ slug }}" class="{{ 'font-bold text-primary-500' if currentTutorial == slug else 'font-medium text-slate-400' }} hover:text-primary-500 leading-relaxed px-4 block transition-colors text-sm">
            {{ label }}
          </a>
        </li>
      {% endfor %}
      <!-- Coming Soon Menengah -->
      <li class="border-l-2 border-slate-100 py-[6px] opacity-50">
        <span class="font-medium text-slate-400 italic px-4 block text-[13px]">Regular Expressions (coming soon)</span>
      </li>
      <li class="border-l-2 border-slate-100 py-[6px] opacity-50">
        <span class="font-medium text-slate-400 italic px-4 block text-[13px]">Bekerja dengan JSON (coming soon)</span>
      </li>
      <li class="border-l-2 border-slate-100 py-[6px] opacity-50">
        <span class="font-medium text-slate-400 italic px-4 block text-[13px]">Virtual Environments (coming soon)</span>
      </li>
    </ul>
    <!-- Level Advanced -->
    <div class="flex items-center gap-2 px-4 py-3 bg-slate-50 rounded mb-2 border border-slate-100">
      <img src="/img/icons/gold.png" alt="Level Advanced" class="w-5 h-5">
        <span class="font-bold text-slate-700 text-xs uppercase tracking-wider">Level Advanced</span>
      </div>
      <ul class="leading-normal mb-6 opacity-60">
        <li class="border-l-2 border-slate-100 py-[6px]">
          <span class="font-medium text-slate-400 italic px-4 block text-[13px]">Decorators & Closures (coming soon)</span>
        </li>
        <li class="border-l-2 border-slate-100 py-[6px]">
          <span class="font-medium text-slate-400 italic px-4 block text-[13px]">Metaprogramming (coming soon)</span>
        </li>
        <li class="border-l-2 border-slate-100 py-[6px]">
          <span class="font-medium text-slate-400 italic px-4 block text-[13px]">Asynchronous (asyncio) (coming soon)</span>
        </li>
      </ul>
      <!-- Level Professional -->
      <div class="flex items-center gap-2 px-4 py-3 bg-slate-50 rounded mb-2 border border-slate-100">
        <img src="/img/icons/platinum.png" alt="Level Professional" class="w-5 h-5">
          <span class="font-bold text-slate-700 text-xs uppercase tracking-wider">Level Professional</span>
        </div>
        <ul class="leading-normal mb-6 opacity-60">
          <li class="border-l-2 border-slate-100 py-[6px]">
            <span class="font-medium text-slate-400 italic px-4 block text-[13px]">Machine Learning (coming soon)</span>
          </li>
          <li class="border-l-2 border-slate-100 py-[6px]">
            <span class="font-medium text-slate-400 italic px-4 block text-[13px]">FastAPI (coming soon)</span>
          </li>
          <li class="border-l-2 border-slate-100 py-[6px]">
            <span class="font-medium text-slate-400 italic px-4 block text-[13px]">MCP with FastMCP (coming soon)</span>
          </li>
        </ul>