<script>
(function() {
    let pyodidePromise = null;
    async function getPyodide() {
        if (!pyodidePromise) pyodidePromise = loadPyodide();
        return pyodidePromise;
    }

    const runBtn = document.getElementById('run-btn');
    const output = document.getElementById('output');
    const status = document.getElementById('status-badge');

    runBtn.addEventListener('click', async () => {
        output.textContent = 'Processing...';
        status.textContent = 'Matching...';
        runBtn.disabled = true;

        try {
            const py = await getPyodide();
            
            const pattern = document.getElementById('pattern-input').value;
            const text = document.getElementById('text-input').value; // Using textarea value
            
            // Build flags
            let flags = [];
            if(document.getElementById('flag-i').checked) flags.push("re.IGNORECASE");
            if(document.getElementById('flag-m').checked) flags.push("re.MULTILINE");
            if(document.getElementById('flag-s').checked) flags.push("re.DOTALL");
            const flagStr = flags.length > 0 ? flags.join(" | ") : "0";

            py.globals.set("py_pattern", pattern);
            py.globals.set("py_text", text);
            py.globals.set("py_flag_str", flagStr); // We pass string, but need to eval it in Py
            
            const runCode = `
import re

try:
    flags = ${flagStr} # Injected directly
    hits = list(re.finditer(py_pattern, py_text, flags))
    
    if not hits:
        print("No matches found.")
    else:
        print(f"Found {len(hits)} matches:\\n")
        for i, match in enumerate(hits, 1):
            print(f"Match {i}: '{match.group()}'")
            print(f"   Range: {match.span()}")
            if match.groups():
                print(f"   Groups: {match.groups()}")
            print("-" * 20)
            
except re.error as e:
    print(f"Regex Error: {e}")
except Exception as e:
    print(f"Error: {e}")
            `;

            let stdout = "";
            py.setStdout({ batched: (str) => stdout += str + "\\n" });
            await py.runPythonAsync(runCode);
            output.textContent = stdout;
            status.textContent = 'Done';
            
        } catch (err) {
            output.textContent = "Error: " + err.message;
            status.textContent = 'Failed';
        } finally {
            runBtn.disabled = false;
        }
    });
})();
</script>
