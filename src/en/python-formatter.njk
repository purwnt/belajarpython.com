<script>
(function() {
    let pyodidePromise = null;
    async function getPyodide() {
        if (!pyodidePromise) pyodidePromise = loadPyodide();
        return pyodidePromise;
    }

    const editor = document.getElementById('editor');
    const output = document.getElementById('output');
    const runBtn = document.getElementById('run-btn');
    const resetBtn = document.getElementById('reset-btn');
    const status = document.getElementById('status-badge');

    runBtn.addEventListener('click', async () => {
        output.textContent = 'Formatting...';
        status.textContent = 'Formatting...';
        runBtn.disabled = true;

        try {
            const py = await getPyodide();
            py.globals.set("input_code", editor.innerText);
            
            // Using ast.unparse as a lightweight built-in formatter (Beautifier)
            const runCode = `
import ast
try:
    # Parse and unparse to re-format styling
    parsed = ast.parse(input_code)
    print(ast.unparse(parsed))
except Exception as e:
    print(f"Error parsing code: {e}")
            `;

            let stdout = "";
            py.setStdout({ batched: (str) => stdout += str + "\\n" });
            await py.runPythonAsync(runCode);
            
            output.textContent = stdout;
            status.textContent = 'Done';
            
        } catch (err) {
            output.textContent = "Error: " + err.message;
            status.textContent = 'Failed';
        } finally {
            runBtn.disabled = false;
        }
    });
    
    resetBtn.addEventListener('click', () => {
        editor.innerText = '';
        output.textContent = '';
    });
})();
</script>
