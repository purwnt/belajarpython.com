<!DOCTYPE html>
<html lang="{{ lang if lang else 'id' }}" class="scroll-smooth">
  {% include "head.njk" %}
  <body class="overflow-x-hidden">
    {% include "navbar.njk" %}
    {% if isHomepage %}
      {% if lang == 'en' %}
        {% include "landing-en.njk" %}
      {% else %}
        {% include "landing.njk" %}
      {% endif %}
    {% else %}
      {% set currentTutorial = page.url | getTutorialName %}
      <div class="max-w-4xl mx-auto py-10 flex">
        {% if isTutorial %}
          {% include "sidebar.njk" %}
        {% endif %}
        <main class="w-full min-w-0 pb-10 px-4 {{ 'md:w-9/12 tutorial' if isTutorial else 'md:w-12/12' }}">
          <h1 class="text-primary-500 font-medium text-3xl mb-3">{{ title }}</h1>
          {{ content | safe }}
        </main>
      </div>
    {% endif %}
    {% include "footer.njk" %}
    {% include "progress-script.njk" %}
    {% include "analytics.njk" %}
  </body>
</html>